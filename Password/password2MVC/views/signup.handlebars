<div class="form-signin text-center p-5">
    <form id="signup-form">
        <h1 class="h3 mb-3 fw-normal">Please enter sign up information</h1>

        <div class="form-floating m-1">
            <input type="text" class="form-control" id="username-signup" placeholder="Username">
            <label for="floatingInput">Username</label>
        </div>
        <div class="form-floating m-1">
            <input type="password" class="form-control" id="password-signup" placeholder="Password">
            <label for="floatingPassword">Password</label>
        </div>
        <button class="w-100 btn btn-lg btn-primary m-1" type="submit">Sign Up</button>
    </form>
</div>
<script src="/js/signup.js"></script>